{
  "name": "create-react-rewired-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0",
    "styled-components": "^4.4.1"
  },
  "scripts": {
    "prestart": "yarn install",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "build:analyze": "REACT_APP_BUNDLE_VISUALIZER=1 react-app-rewired build",
    "test": "react-app-rewired test",
    "test:ci": "react-app-rewired test test --env=jsdom --coverage --watchAll=false --maxWorkers=2",
    "test:coverage": "react-app-rewired test --coverage --watchAll=false",
    "serve": "serve -s build",
    "prettify": "prettier -c --write \"*/**\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@hot-loader/react-dom": "^16.11.0",
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^24.0.23",
    "babel-jest": "^24.9.0",
    "babel-plugin-macros": "^2.7.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-tailwind-components": "^0.5.10",
    "customize-cra": "^0.9.1",
    "husky": "^4.0.10",
    "jest-styled-components": "^6.3.4",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "2.1.5",
    "react-hot-loader": "^4.12.18",
    "tailwind.macro": "^1.0.0-alpha.10",
    "tailwindcss": "^1.1.3",
    "webpack-bundle-analyzer": "^3.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
